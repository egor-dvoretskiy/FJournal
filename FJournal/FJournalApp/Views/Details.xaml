<Window x:Class="FJournalApp.Views.Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FJournalApp.Views"
        xmlns:vm="clr-namespace:FJournalApp.ViewModels"
        xmlns:ethemeviews="clr-namespace:ETheme.Views;assembly=ETheme"
        mc:Ignorable="d"
        x:Name="DetailsWindow"
        Title="Details"
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True" 
        ResizeMode="CanResize"
        Background="{StaticResource DefaultBackgroundColor}">
    <Window.Resources>
        <vm:DetailsViewModel x:Key="detailsViewModel"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ethemeviews:TitleBar Grid.Row="0"
                              Title="{Binding TitleProperty, Mode=OneWay, Source={StaticResource detailsViewModel}}"
                              x:Name="grid_TitleBar"/>
        <StackPanel Grid.Row="1"
                    CanVerticallyScroll="True"
                    CanHorizontallyScroll="False">
            
        </StackPanel>
    </Grid>
</Window>
