<Window x:Class="FJournalGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FJournalGUI"
        xmlns:control="clr-namespace:FJournalGUI.Views"
        x:Name="FJournalWindow"
        mc:Ignorable="d"
        Title="FJournal" 
        MinHeight="400" 
        MinWidth="1080" 
        Height="400" 
        Width="1080" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True" 
        ResizeMode="CanResize">

    <Grid Background="{StaticResource ControlBackgroundNormal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" 
              x:Name="grid_TitleBar" 
              AllowDrop="True" 
              Background="{StaticResource ControlBackgroundNormal}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Label Content="FJournal" 
                       Foreground="{StaticResource ControlForegroundWhite}" 
                       Margin="0,0,0,0" 
                       Padding="25,0,0,0" 
                       VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="2">
                    <Button x:Name="button_CloseWindow" 
                            Style="{StaticResource CloseRoundButton}" 
                            Click="button_CloseWindow_Click"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" 
              x:Name="grid_MainLayout">            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid x:Name="grid_DataGridRecords" 
                      Grid.Row="0" 
                      VerticalAlignment="Stretch" >
                    <TabControl x:Name="TabControl_Main" 
                                TabStripPlacement="Left" 
                                SizeChanged="TabControl_SizeChanged" 
                                SelectionChanged="TabControl_Main_SelectionChanged">
                        <TabItem Header="Records Window"
                                 Background="{StaticResource ControlBackgroundNormal}"
                                 FontSize="12"
                                 Height="20">
                            <DataGrid x:Name="dg_dbRecords" 
                                      Padding="0,0,0,0"
                                      Margin="0,0,0,0"
                                      ItemsSource="{Binding Path=Records, Mode=OneWay}"
                                      MouseDoubleClick="dg_dbRecords_MouseDoubleClick"
                                      IsReadOnly="True"
                                      Height="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto"
                                      ScrollViewer.CanContentScroll="True"
                                      EnableRowVirtualization="True"
                                      EnableColumnVirtualization="True"
                                      VirtualizingPanel.IsVirtualizing="True"
                                      VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                                      VirtualizingPanel.VirtualizationMode="Recycling"
                                      VirtualizingPanel.ScrollUnit="Item"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserReorderColumns="False"
                                      CanUserDeleteRows="False"
                                      CanUserResizeColumns="False"
                                      CanUserResizeRows="False" 
                                      VerticalContentAlignment="Stretch" 
                                      HorizontalContentAlignment="Stretch">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="TimeStamp" 
                                                        Binding="{Binding Path=TimeStamp}"
                                                        Width="150"/>
                                    <DataGridTextColumn Header="Message" 
                                                        Binding="{Binding Path=Message}"
                                                        Width="400"/>
                                    <DataGridTextColumn Header="LogSource" 
                                                        Binding="{Binding Path=LogSource}"
                                                        Width="100"/>
                                    <DataGridTextColumn Header="LogType" 
                                                        Binding="{Binding Path=LogType}"
                                                        Width="70"/>
                                    <DataGridTextColumn Header="CallerMemberName" 
                                                        Binding="{Binding Path=CallerMemberName}"
                                                        Width="200"/>
                                    <DataGridTextColumn Header="CallerFilePath" 
                                                        Binding="{Binding Path=CallerFilePath}"
                                                        Width="450"/>
                                    <DataGridTextColumn Header="CallerLineNumber" 
                                                        Binding="{Binding Path=CallerLineNumber}"
                                                        Width="80"/>
                                    <DataGridTextColumn Header="TotalCpuUsage" 
                                                        Binding="{Binding Path=TotalCpuUsage}"
                                                        Width="80"/>
                                    <DataGridTextColumn Header="PrivateMemoryUsage" 
                                                        Binding="{Binding Path=PrivateMemoryUsage}"
                                                        Width="80"/>
                                </DataGrid.Columns>
                                <DataGrid.ContextMenu>
                                    <ContextMenu x:Name="contextmenu_RecordsDataGridContextMenu">
                                        <MenuItem Header="TimeStamp"
                                                  Click="TimeStampMenuItem_Click"
                                                  IsCheckable="True"
                                                  IsChecked="True"/>
                                        <MenuItem Header="LogSource"
                                                  Click="LogSourceMenuItem_Click"
                                                  IsCheckable="True"
                                                  IsChecked="True"/>
                                        <MenuItem Header="LogType"
                                                  Click="LogTypeMenuItem_Click"
                                                  IsCheckable="True"
                                                  IsChecked="True"/>
                                        <MenuItem Header="Message"
                                                  Click="MessageMenuItem_Click"
                                                  IsCheckable="True"
                                                  IsChecked="True"/>
                                        <MenuItem Header="CallerMemberName"
                                                  Click="CallerMemberNameMenuItem_Click"
                                                  IsCheckable="True"
                                                  IsChecked="True"/>
                                        <MenuItem Header="CallerFilePath"
                                                  Click="CallerFilePathMenuItem_Click"
                                                  IsCheckable="True"
                                                  IsChecked="True"/>
                                        <MenuItem Header="CallerLineNumber"
                                                  Click="CallerLineNumberMenuItem_Click"
                                                  IsCheckable="True"
                                                  IsChecked="True"/>
                                        <MenuItem Header="TotalCpuUsage"
                                                  Click="TotalCpuUsageMenuItem_Click"
                                                  IsCheckable="True"
                                                  IsChecked="True"/>
                                        <MenuItem Header="PrivateMemoryUsage"
                                                  Click="PrivateMemoryUsageMenuItem_Click"
                                                  IsCheckable="True"
                                                  IsChecked="True"/>
                                    </ContextMenu>
                                </DataGrid.ContextMenu>
                            </DataGrid>
                        </TabItem>
                        <TabItem Header="Live Window"
                                 Background="{StaticResource ControlBackgroundNormal}"
                                 Foreground="Wheat"
                                 FontSize="12"
                                 Height="20">
                            <control:LiveBlock x:Name="LiveBlock_Records"
                                               Margin="0,0,0,0"
                                               Padding="0,0,0,0"
                                               Background="#FF3A3A3A"
                                               ItemsCountLimit="50"/>
                        </TabItem>
                    </TabControl>    
                </Grid>
                <Grid Grid.Row="1">
                    <StatusBar Padding="0,0,0,0"
                               Margin="0,0,0,0">
                        <StatusBarItem Padding="0"
                                       Margin="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <TextBlock Text="Current amount of items in datagrid:"
                                               Style="{StaticResource TextBlockStatusBar}"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock x:Name="textblock_AmountOfItemsInRecords" 
                                               Style="{StaticResource TextBlockStatusBar}"
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </Grid>
                            </Grid>
                        </StatusBarItem>
                        <StatusBarItem Margin="0"
                                       Padding="0">
                            <Grid Width="160">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="7*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <TextBlock x:Name="textblock_elapsedLabel" Text="Elapsed in ms:"
                                           Style="{StaticResource TextBlockStatusBar}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Stretch"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <TextBlock x:Name="textblock_elapsed" 
                                               Text="{Binding Elapsed}"
                                               Style="{StaticResource TextBlockStatusBar}"
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </Grid>
                            </Grid>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </Grid>
                
            <Grid Grid.Column="1">
                <TabControl TabStripPlacement="Right">
                    <TabItem Header="Analyze Scheme"
                             IsEnabled="False"/>
                    <TabItem Header="Export Data"
                             IsEnabled="False"/>
                    <TabItem Header="Report a Bug"
                             IsEnabled="False">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <RichTextBox x:Name="richtextbox_BugReport"
                                             Margin="20" ScrollViewer.CanContentScroll="True"/>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Button x:Name="button_ApproveBugReport"
                                        Style="{StaticResource Button}"
                                        Content="Approve"
                                        Margin="45,0,45,0"/>
                            </Grid>
                        </Grid>                        
                    </TabItem>
                    <TabItem Header="Filter" 
                             IsSelected="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <ScrollViewer>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Label Content="Amount of Records"
                                                       Style="{StaticResource LabelFilterCaption}"/>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <TextBox x:Name="textbox_AmountOfRecordsToDisplay"
                                                         Style="{StaticResource TextBoxInputField}"/>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Button x:Name="button_ChooseDate"
                                                    Content="Choose Date"
                                                    Style="{StaticResource Button}"
                                                    Margin="20,4,20,4"
                                                    Padding="0,0,0,0" 
                                                    Click="button_ChooseDate_Click"
                                                    Foreground="Wheat"/>
                                        </Grid>
                                        <Grid x:Name="grid_Calendar"
                                              Visibility="Collapsed"
                                              Grid.Row="2">
                                            <Calendar x:Name="calendar_DateFilter"
                                                      SelectionMode="MultipleRange"
                                                      Style="{StaticResource Calendar}"/>
                                        </Grid>
                                        <Grid Grid.Row="3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Label Style="{StaticResource LabelFilterCaption}"
                                                       Content="Message Span"/>
                                            </Grid>
                                            <Grid Grid.Column="1">
                                                <TextBox x:Name="textbox_MessageSpan" 
                                                         Style="{StaticResource TextBoxInputField}"/>
                                            </Grid>
                                        </Grid>
                                        
                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Button x:Name="button_ApplyFilterSettings" 
                                            Content="Apply" 
                                            Style="{StaticResource Button}" 
                                            Click="button_ApplyFilterSettings_Click"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Button x:Name="button_ResetFilterSettingsToDefault" 
                                            Content="Reset" 
                                            Style="{StaticResource Button}" 
                                            Click="button_ResetFilterSettingsToDefault_Click"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
